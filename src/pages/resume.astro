---
import Layout from "../layouts/Layout.astro";

const timeline = [
  {
    name: "Graduated from the University of Auckland",
    date: "2024",
    description:
      "Bachelor of Engineering (First Class Honours) in Software Engineering",
  },
  {
    name: "The start of Astro Media",
    date: "2023",
    description: "Offering neighbourhood web design services with a friend",
  },
  {
    name: "Summer Internship",
    date: "2022/23",
    description: "Embedded software engineer intern at Ubiik Mimomax",
  },
  {
    name: "Started University",
    date: "2020",
    description: "Dean's Honours List",
  },
];
---

<Layout title="Resume">
  <div class="max-w-screen-sm mx-auto flex flex-col gap-8 px-2">
    <section class="flex flex-col gap-4">
      <div class="w-fit">
        <h1 class="text-4xl w-fit font-pacifico">My Resume</h1>
        <div class="h-1 bg-primary"></div>
      </div>

      <ul
        class="mt-8 timeline timeline-snap-icon max-md:timeline-compact timeline-vertical"
      >
        {
          timeline.map((event, index) => (
            <>
              <li>
                <div class="timeline-middle">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    class="h-5 w-5"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <div
                  class={`timeline-${index % 2 == 0 ? "start md:text-end" : "end"} mb-10`}
                >
                  <time class="font-mono italic">{event.date}</time>
                  <div class="text-lg font-black">{event.name}</div>
                  {event.description}
                </div>
                <hr />
              </li>
            </>
          ))
        }
      </ul>
      <a
        href="/resume.pdf"
        download
        class="btn btn-secondary mx-auto btn-sm text-white"
        >Download my full resume</a
      >
    </section>
  </div>
</Layout>
